#!/usr/bin/env bash

LIST=false
ALL=false
NO_EMAIL=false
NO_MAILMAP=false
FILE=""
EDITOR=$(git var GIT_EDITOR)

while [[ $# -gt 0 ]]; do
  case $1 in
    -l|--list )
      LIST=true
      shift
      ;;
    -a|--all )
      ALL=true
      shift
      ;;
    --no-email )
      NO_EMAIL=true
      shift
      ;;
    --no-use-mailmap|--no-mailmap )
      NO_MAILMAP=true
      shift
      ;;
    * )
      break
  esac
done

if ! $LIST; then
  FILE=$1
  if [ -z "$FILE" ]; then
    FILE=$(find . -mindepth 1 -maxdepth 1 \( -iname '*authors*' -o -iname '*contributors*' \) | head -n1)
    if [ -z "$FILE" ]; then
      FILE='AUTHORS'
    fi
  fi
fi

#
# list authors sorted by number of commits (descending).
#

shortlog() {
  if $NO_MAILMAP; then
    git -c mailmap.file=/dev/null -c mailmap.blob=0000000:/dev/null shortlog -sne
  else
    git shortlog -sne
  fi
}

filter() {
  if $ALL; then
    cat
  else
     awk '{$1=""; sub(" ", ""); print}' | awk -F'<' '!x[$1]++' | awk -F'<' '!x[$2]++'
  fi
}

trim() {
  if $NO_EMAIL; then
    awk -F'<' '{gsub(/ +$/, "", $1); print $1}'
  else
    cat
  fi
}

authors() {
  shortlog | filter | trim
}

#
# authors.
#

if $LIST; then
  authors
else
  authors >> "$FILE"
  test -n "$EDITOR" && $EDITOR "$FILE"
fi
